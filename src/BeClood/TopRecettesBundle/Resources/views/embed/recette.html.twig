{% set class = class is not defined ? "danger" : class %}

<div class="panel panel-{{ class }}" style="margin-top:20px;">
    <div class="panel-heading">
        <div class="panel-title">
            {% if link is defined and link == true %}
                <a href="{{ path('ez_urlalias', {'locationId': content.contentInfo.mainLocationId}) }}">
                    {{ ez_content_name( content ) }}
                </a>
            {% else %}
                {{ ez_content_name( content ) }}
            {% endif %}
        </div>
    </div>
    <div class="panel-body">
        <div class="col-md-8">
            <p>{{ ez_field_name(content, 'ingredients') }} : {{ ez_render_field( content, "ingredients" ) }}</p>
            <div>{{ ez_render_field( content, "contenu" ) }}</div>
            <p>{{ ez_field_name(content, 'temps_preparation') }}
                : {{ ez_render_field(content, 'temps_preparation') }}</p>
            <p>{{ ez_field_name(content, 'temps_cuisson') }} : {{ ez_render_field(content, 'temps_cuisson') }}</p>
        </div>
        <div class="col-md-4">
            {{ ez_render_field( content, 'image', { 'parameters':{ 'alias': 'medium'} } ) }}
        </div>
    </div>
</div>